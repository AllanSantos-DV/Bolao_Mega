rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Dados de loterias: leitura pública, escrita com validação
    match /loterias/{loteria}/concursos/{concurso} {
      allow read: if true;
      
      // Permite escrita se:
      // 1. É criação de documento novo OU
      // 2. É atualização com dados válidos do sistema
      allow write: if 
        // Permite criação (documento não existe)
        !resource.exists ||
        // OU permite atualização se vem de fontes confiáveis
        (request.resource.data.fonte in ['caixa-api', 'firebase', 'config-fallback'] &&
         request.resource.data.keys().hasAll(['resultado', 'numero']) &&
         request.resource.data.resultado is list &&
         request.resource.data.resultado.size() > 0);
    }

    // Cache: leitura pública, escrita com validação básica
    match /cache/{loteria}/{concurso} {
      allow read: if true;
      allow write: if request.resource.data.keys().hasAll(['resultado', 'timestamp']);
    }

    // Bloquear todo o restante
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
