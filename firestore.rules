rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /loterias/{loteria}/concursos/{concurso} {
      allow read: if request.auth != null;
      allow write: if 
        request.auth != null &&
        (
          !resource.exists ||
          (
            request.resource.data.keys().hasAll(['resultado', 'numero']) &&
            request.resource.data.resultado is list &&
            request.resource.data.resultado.size() > 0
          )
        );
    }

    match /cache/{loteria}/{concurso} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.keys().hasAll(['resultado', 'timestamp']);
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
