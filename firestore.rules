rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Dados de loterias: leitura e escrita apenas com autenticação
    match /loterias/{loteria}/concursos/{concurso} {
      // Leitura apenas para usuários autenticados
      allow read: if request.auth != null;
      
      // Escrita apenas para usuários autenticados com dados válidos
      allow write: if 
        request.auth != null &&  // Usuário deve estar autenticado
        (
          // Permite criação (documento não existe)
          !resource.exists ||
          // OU permite atualização se vem de fontes confiáveis
          (request.resource.data.fonte in ['caixa-api', 'firebase', 'config-fallback'] &&
           request.resource.data.keys().hasAll(['resultado', 'numero']) &&
           request.resource.data.resultado is list &&
           request.resource.data.resultado.size() > 0)
        );
    }

    // Cache: leitura e escrita apenas com autenticação
    match /cache/{loteria}/{concurso} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.keys().hasAll(['resultado', 'timestamp']);
    }

    // Bloquear todo o restante
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
